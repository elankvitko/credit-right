<%= stylesheet_link_tag 'colorlib/dashboard/bower_components/sidebar-nav/dist/sidebar-nav.min.css' %>
<%= stylesheet_link_tag 'colorlib/dashboard/animate.css' %>
<%= stylesheet_link_tag 'colorlib/dashboard/style.css' %>
<%= stylesheet_link_tag 'colorlib/dashboard/colors/default.css' %>
<%= stylesheet_link_tag 'profile/card-js.min.css' %>
<%= stylesheet_link_tag 'colorlib/dashboard/bower_components/toast-master/css/jquery.toast.css' %>

<body class="fix-header">
    <div id="wrapper">
      <%= render "layouts/dashboard/nav" %>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">My Profile</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="white-box">
                            <div class="user-bg">
                              <%= image_tag "colorlib/dashboard/large/img1.jpg", width: "100%" %>
                              <div class="overlay-box">
                                <div class="user-content">
                                    <a href="javascript:void(0)">
                                      <%= image_tag "colorlib/dashboard/users/genu.jpg", class: "thumb-lg img-circle" %>
                                    </a>
                                    <h4 class="text-white"><%= current_user.full_name %></h4>
                                    <h5 class="text-white"><%= current_user.email %></h5>
                                </div>
                              </div>
                            </div>
                            <div class="user-btm-box">
                              <h3>Linked Cards</h3>
                              <div class="clear"></div>
                              <%= render 'cards_table' %>
                              <br>
                              <button type="button" id="new-card-trig" class="btn btn-success" style="float:right;">Add New Card</button>
                              <%= render 'new_card_form' %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 col-xs-12">
                        <div class="white-box">
                          <%= render 'profile_form' %>
                        </div>
                    </div>
                </div>
            </div>
            <%= render 'layouts/dashboard/footer' %>
        </div>
    </div>

    <%= javascript_include_tag 'colorlib/dashboard/bower_components/sidebar-nav/dist/sidebar-nav.min.js' %>
    <%= javascript_include_tag 'colorlib/dashboard/jquery.slimscroll.js' %>
    <%= javascript_include_tag 'colorlib/dashboard/waves.js' %>
    <%= javascript_include_tag 'colorlib/dashboard/custom.min.js' %>
    <%= javascript_include_tag 'profile/card-js.min.js' %>
    <%= javascript_include_tag 'colorlib/dashboard/bower_components/toast-master/js/jquery.toast.js' %>
</body>
