<%= form_for current_user, html: { class: "form-horizontal form-material" } do |f| %>
  <div class="form-group">
    <label class="col-md-12">First Name</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[first_name]" placeholder="John" value="<%= current_user.first_name %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">Last Name</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[last_name]" placeholder="Doe" value="<%= current_user.last_name %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">Email</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[email]" placeholder="Ex. john@gmail.com" value="<%= current_user.email %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">P.O. Box Number</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[po]" placeholder="P.O. Box 1443" value="<%= current_user.po %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">Address</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[address]" placeholder="123 Broom St." value="<%= current_user.address %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">Second Line</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[address_second]" placeholder="Apt, House Number, etc..." value="<%= current_user.address_second %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">City</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[city]" placeholder="Brooklyn" value="<%= current_user.city %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">State</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[state]" placeholder="NY" value="<%= current_user.state %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">Zip Code</label>
    <div class="col-md-12">
      <input class="input100 form-control form-control-line" type="text" name="user[zip]" placeholder="10019" value="<%= current_user.zip %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">Password</label>
    <div class="col-md-12">
      <input class="input100 password-field-emp form-control form-control-line" type="password" name="user[password]" autocomplete="off" data-lpignore="true">
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-12">Confirm Password</label>
    <div class="col-md-12">
      <input class="input100 password-field-emp form-control form-control-line" type="password" name="user[password_confirmation]" autocomplete="off" data-lpignore="true">
    </div>
  </div>

  <div class="form-group">
      <div class="col-sm-12">
          <button type="submit" class="btn btn-success">Update Profile</button>
      </div>
  </div>
<% end %>
